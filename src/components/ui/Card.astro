---
import type { HTMLAttributes } from "astro/types";
import { cn } from "../../lib/utils";

type Props = HTMLAttributes<"div">

const { class: className, ...props } = Astro.props;
---

<div
  class={cn(
    "group bg-card text-card-foreground flex flex-col rounded-xl border py-6 shadow-sm group",
    'group-hover:bg-secondary border-border/50 transition-all duration-300 ',
    "border-border/50 transition-all duration-300",
    className
  )}
  {...props}
>
  <slot />
</div>
