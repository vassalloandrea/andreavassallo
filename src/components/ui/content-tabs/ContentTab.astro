---
import type { HTMLAttributes } from "astro/types";
import type { Section } from "../ContentTabs.astro";
import Link from "../Link.astro";
import Icon from "node_modules/astro-icon/components/Icon.astro";

type Props = HTMLAttributes<"div"> & {
  section: Section;
  href?: string;
};

const { section, href } = Astro.props;
---

<div id={section.title.toLowerCase()} class="space-y-6 scroll-mt-20">
  <div class="mb-8">
    <h2 class="font-serif text-2xl md:text-3xl text-foreground mb-2">{section.title}</h2>
    <p class="text-muted-foreground">{section.description}</p>
    <Link href={href} class="text-xs italic flex items-center gap-1 mt-1" variant="tertiary">
      View all <Icon name="lucide:arrow-right" class="w-3 h-3" />
    </Link>
  </div>
</div>
