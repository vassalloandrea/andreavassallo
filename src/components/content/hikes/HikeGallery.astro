---
import { Image } from "astro:assets";
import { cn } from "src/lib/utils";

import type { HTMLAttributes } from "astro/types";
import type { CollectionEntry } from "astro:content";
import type { ImageMetadata } from "astro";

interface Props extends HTMLAttributes<"div"> {
  hike: CollectionEntry<"hikes">;
  class?: string;
}

const allImages = import.meta.glob<{ default: ImageMetadata }>(
  "/src/content/assets/hike_images/**/*.{jpg,jpeg,png,gif,svg,webp}"
);

async function fetchHikeImages(hike: CollectionEntry<"hikes">): Promise<ImageMetadata[]> {
  const prefix = `/src/content/assets/hike_images/${hike.id}/`;
  const matched = Object.entries(allImages).filter(([path]) => path.startsWith(prefix));
  const imageEntries = await Promise.all(matched.map(([, importFn]) => importFn()));
  return imageEntries.map((entry) => entry.default);
}

const { hike, class: className } = Astro.props;
const images = await fetchHikeImages(hike);
const imageSrcs = images.map((img) => img.src);
---

{
  images.length > 0 && (
    <div
      class={cn("mb-10 gallery-component", className)}
      data-controller="gallery"
      data-gallery-images-value={JSON.stringify(imageSrcs)}
      data-gallery-index-value="0"
    >
      <div class="relative aspect-4/3 rounded-2xl overflow-hidden group bg-muted">
        {images[0] ? (
          <Image
            data-gallery-target="mainImage"
            src={images[0]}
            alt={hike.data.title}
            loading="lazy"
            decoding="async"
            quality={30}
            format="webp"
            width={800}
            class="w-full h-full object-cover cursor-pointer transition-transform duration-500 hover:scale-105"
            data-action="click->gallery#openFullscreen"
          />
        ) : (
          <img
            data-gallery-target="mainImage"
            src="https://placehold.co/800x450?text=No+Image"
            alt={hike.data.title}
            class="w-full h-full object-cover cursor-pointer transition-transform duration-500 hover:scale-105"
            data-action="click->gallery#openFullscreen"
          />
        )}

        {images.length > 1 && (
          <>
            <button
              class="absolute cursor-pointer left-2 sm:left-4 top-1/2 -translate-y-1/2 w-8 h-8 sm:w-10 sm:h-10 bg-background/80 backdrop-blur-sm rounded-full flex items-center justify-center opacity-100 sm:opacity-0 group-hover:opacity-100 transition-opacity hover:bg-background text-foreground touch-manipulation"
              aria-label="Previous image"
              data-action="click->gallery#prev"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="h-4 w-4 sm:h-5 sm:w-5"
              >
                <path d="m15 18-6-6 6-6" />
              </svg>
            </button>
            <button
              class="absolute cursor-pointer right-2 sm:right-4 top-1/2 -translate-y-1/2 w-8 h-8 sm:w-10 sm:h-10 bg-background/80 backdrop-blur-sm rounded-full flex items-center justify-center opacity-100 sm:opacity-0 group-hover:opacity-100 transition-opacity hover:bg-background text-foreground touch-manipulation"
              aria-label="Next image"
              data-action="click->gallery#next"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="h-4 w-4 sm:h-5 sm:w-5"
              >
                <path d="m9 18 6-6-6-6" />
              </svg>
            </button>
          </>
        )}

        <div class="absolute bottom-2 right-2 sm:bottom-4 sm:right-4 px-2 py-1 sm:px-3 sm:py-1.5 bg-background/80 backdrop-blur-sm rounded-full text-xs sm:text-sm text-foreground">
          <span data-gallery-target="counter">1</span> / {images.length}
        </div>
      </div>

      {images.length > 1 && (
        <div class="flex gap-2 mt-3 overflow-x-auto pb-2 scrollbar-hide snap-x snap-mandatory">
          {images.map((img, index) => (
            <button
              data-gallery-target="thumbnail"
              data-gallery-index-param={index}
              data-action="click->gallery#goTo"
              class:list={[
                "thumbnail-btn relative w-16 h-11 sm:w-20 sm:h-14 rounded-lg overflow-hidden shrink-0 transition-all border-2 snap-start touch-manipulation",
                index === 0 ? "border-primary opacity-100" : "border-transparent opacity-60 hover:opacity-100",
              ]}
            >
              <Image
                src={img}
                alt=""
                loading="lazy"
                decoding="async"
                quality={30}
                format="webp"
                width={80}
                class="w-full h-full object-cover"
              />
            </button>
          ))}
        </div>
      )}

      <div
        data-gallery-target="modal"
        class="fixed inset-0 z-50 bg-background/95 backdrop-blur-md hidden items-center justify-center opacity-0 transition-opacity duration-300"
      >
        <button
          class="absolute top-4 right-4 sm:top-6 cursor-pointer sm:right-6 w-10 h-10 sm:w-12 sm:h-12 bg-secondary rounded-full flex items-center justify-center text-foreground hover:bg-secondary/80 touch-manipulation"
          aria-label="Close fullscreen"
          data-action="click->gallery#closeFullscreen"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-5 w-5 sm:h-6 sm:w-6"
          >
            <>
              <path d="M18 6 6 18" />
              <path d="m6 6 12 12" />
            </>
          </svg>
        </button>

        <div class="relative w-full max-w-7xl mx-2 sm:mx-6 h-[85vh] sm:h-auto sm:aspect-video">
          <img
            data-gallery-target="fullscreenImage"
            src={images[0]?.src}
            class="w-full h-full object-contain touch-none"
            alt=""
          />
        </div>

        {images.length > 1 && (
          <>
            <button
              class="absolute cursor-pointer left-2 sm:left-6 top-1/2 -translate-y-1/2 w-10 h-10 sm:w-12 sm:h-12 bg-secondary rounded-full flex items-center justify-center text-foreground hover:bg-secondary/80 touch-manipulation"
              aria-label="Previous image"
              data-action="click->gallery#prev"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="h-5 w-5 sm:h-6 sm:w-6"
              >
                <path d="m15 18-6-6 6-6" />
              </svg>
            </button>
            <button
              class="absolute cursor-pointer right-2 sm:right-6 top-1/2 -translate-y-1/2 w-10 h-10 sm:w-12 sm:h-12 bg-secondary rounded-full flex items-center justify-center text-foreground hover:bg-secondary/80 touch-manipulation"
              aria-label="Next image"
              data-action="click->gallery#next"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="h-5 w-5 sm:h-6 sm:w-6"
              >
                <path d="m9 18 6-6-6-6" />
              </svg>
            </button>
          </>
        )}
      </div>
    </div>
  )
}
