<div class="lg:grid lg:grid-cols-12 lg:gap-8 mb-10">
  <div class="lg:col-span-8">
    <div>
      {Astro.slots.has('navigation') && <slot name="navigation" />}

      {Astro.slots.has('meta') && (
        <div class="flex flex-wrap items-center gap-3 mb-4">
          <slot name="meta" />
        </div>
      )}

      {Astro.slots.has('title') && (
        <h1 class="font-serif text-3xl md:text-4xl lg:text-5xl text-foreground mb-4 text-balance">
          <slot name="title" />
        </h1>
      )}

      {Astro.slots.has('topics') && (
        <div class="flex flex-wrap gap-2">
          <slot name="topics" />
        </div>
      )}

      {Astro.slots.has('sidebar') && (
        <div class="lg:hidden mb-8">
          <slot name="sidebar" />
        </div>
      )}
    </div>

    <slot />
  </div>

  {Astro.slots.has('sidebar') && (
    <div class="hidden lg:block lg:col-span-4">
      <div class="sticky top-24 overflow-y-auto">
        <slot name="sidebar" />
      </div>
    </div>
  )}
</div>
